{
  "manifest_version": 3,

  "name": "NewTabMEmo",
  "description": "Create new memo at new tab",
  "version": "1.0",

  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["contentScript.js"]
    }
  ],

  "permissions": ["activeTab", "storage", "scripting"],
  "chrome_url_overrides": {
    "newtab": "memo.html"
  }
}
